// prisma/schema.prisma
generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "linux-musl-arm64-openssl-3.0.x"]
} 

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Post {
  id         String    @id @default(cuid())
  createdAt  DateTime  @default(now())
  title      String
  content    String     
  image      Bytes? 
}